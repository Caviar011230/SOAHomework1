<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#CCCCFF">
    <Button
        android:id="@+id/btn_postal_code_back"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="◀返回"
        android:textSize="15dp">

    </Button>
    <RelativeLayout
        android:id="@+id/rl_postal_code_1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:paddingBottom="30dp"
        android:paddingTop="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_below="@id/btn_postal_code_back">

        <TextView
            android:id="@+id/tv_postal_code_1"
            android:layout_width="215dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="邮编查询地名"
            android:textColor="#000000"
            android:textSize="35dp">

        </TextView>

        <EditText
            android:id="@+id/et_postal_code_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_postal_code_1"
            android:background="#FFFFFF">

        </EditText>

        <Button
            android:id="@+id/btn_postal_code_1"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_below="@id/et_postal_code_1"
            android:layout_centerHorizontal="true"
            android:text="查询"
            android:textSize="20dp">


        </Button>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_postal_code_2"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:paddingTop="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_below="@id/rl_postal_code_1">

        <TextView
            android:id="@+id/tv_postal_code_2"
            android:layout_width="215dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="地名查询邮编"
            android:textColor="#000000"
            android:textSize="35dp">

        </TextView>

        <TextView
            android:id="@+id/tv_postal_code_province"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_postal_code_2"
            android:textColor="#000000"
            android:textSize="15dp"
            android:text="省(直辖市、自治区):">

        </TextView>
        <EditText
            android:id="@+id/et_postal_code_2"
            android:layout_toRightOf="@id/tv_postal_code_province"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_postal_code_2"
            android:background="#FFFFFF">

        </EditText>
        <TextView
            android:id="@+id/tv_postal_code_city"
            android:layout_toRightOf="@id/et_postal_code_2"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_postal_code_2"
            android:textColor="#000000"
            android:textSize="15dp"
            android:text="设区市:">

        </TextView>
        <EditText
            android:id="@+id/et_postal_code_3"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/tv_postal_code_city"
            android:layout_below="@+id/tv_postal_code_2"
            android:background="#FFFFFF">

        </EditText>
        <Button
            android:id="@+id/btn_postal_code_2"
            android:layout_width="80dp"
            android:layout_height="45dp"
            android:layout_below="@id/et_postal_code_2"
            android:layout_centerInParent="true"
            android:text="查询"
            android:textSize="20dp">


        </Button>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_postal_code_res"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_postal_code_2"
        android:background="#E6E6FA"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="30dp">
        <TextView
            android:id="@+id/tv_postal_code_res_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="15dp"
            android:text="查询类型："
            android:textSize="20dp"
            android:textColor="#000033">

        </TextView>

        <TextView
            android:id="@+id/tv_postal_code_res_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/tv_postal_code_res_1"
            android:text="查询结果:"
            android:textColor="#000033"
            android:textSize="20dp">

        </TextView>
    </RelativeLayout>
</RelativeLayout>