<?xml version="1.0" encoding="utf-8"?>
<!--  -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#CCCCFF">
    <RelativeLayout
        android:id="@+id/rl_tourist_info_back"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingTop="5dp"
        android:paddingLeft="3dp"
        >
        <Button
            android:id="@+id/btn_tourist_info_back"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="◀返回"
            android:textSize="15dp">

        </Button>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_tourist_info_1"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@id/rl_tourist_info_back">

        <TextView
            android:id="@+id/tv_tourist_info_1"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:text="省份："
            android:textColor="#000000"
            android:textSize="20dp">

        </TextView>

        <Spinner
            android:id="@+id/sp_tourist_info_1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/tv_tourist_info_1"
            android:background="#FFFFFF"
            android:spinnerMode="dialog">

        </Spinner>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_tourist_info_2"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@id/rl_tourist_info_1"
        >
        <TextView
            android:id="@+id/tv_tourist_info_2"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:text="城市："
            android:textColor="#000000"
            android:textSize="20dp">

        </TextView>
        <Spinner
            android:id="@+id/sp_tourist_info_2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/tv_tourist_info_2"
            android:background="#FFFFFF"
            android:spinnerMode="dialog">

        </Spinner>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_tourist_info_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_tourist_info_2"
        android:padding="20dp">
        <Button
            android:id="@+id/btn_tourist_info_search"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:text="搜索"
            android:textSize="24dp">

        </Button>
        <TextView
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="20dp">

        </TextView>
    </RelativeLayout>


</RelativeLayout>